@model IEnumerable<Magistral40.Models.MenuTop>
@{
    Layout = null;
    string act = "";
    if (ViewContext.RouteData.Values["id"] != null) {
        act=ViewContext.RouteData.Values["id"].ToString();
    }
}

        <div class="menu-email vert_menu" >
            <h2>Наша<br> продукция</h2>
            <ul>
                @foreach (var link in Model)
            {

                    <li @(act == link.URL ? "class=selected" : "")> @Html.RouteLink(link.Header, new { controller = "Home", action = "ProdContext", id = link.URL })</li>

                }
            </ul>
        </div>

